@model bit285_assignment1_naps.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Password Information</h1>
<fieldset>
    <form action="/Naps/PasswordInfo" method="post">
        <div>
            <label>Last Name</label>
            <input value="Bansenauer"/>
            <span>* required</span>
        </div>
        <div>
            <label asp-for="Bday">Birth year</label>
            <input value="1998" />
            <span asp-validation-for="Bday">* required</span>
        </div>
        <div>
            <label asp-for="Color">Favorite Color</label>
            <input value="blue" />
            <span asp-validation-for="Color">* required</span>
        </div>

        <div>
            <input type="submit" value="Suggest Password" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>
